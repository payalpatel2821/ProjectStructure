<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rect_rounded_bg"
        android:backgroundTint="@color/bottomsheet_bg"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/styleTextViewNormalBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:text="@string/tunr_off_comment_title" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_description"
            style="@style/styleTextViewSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="center"
            android:text="@string/turn_off_comment_detail" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_3sdp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_ok"
                style="@style/styleTextViewSmallBold"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_8sdp"
                android:background="@drawable/btn_rect_rounded_bg"
                android:backgroundTint="@color/white"
                android:gravity="center"
                android:onClick="onClick"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_8sdp"
                android:paddingRight="@dimen/_20sdp"
                android:paddingBottom="@dimen/_8sdp"
                android:text="@string/ok"
                android:textColor="@color/theme_color" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>