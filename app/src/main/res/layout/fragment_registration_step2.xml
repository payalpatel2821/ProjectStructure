<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.fragments.registration.RegistrationStep1Fragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_45sdp"
            android:orientation="vertical">

            <TextView
                style="@style/styleTextViewLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Validate yourself" />

            <TextView
                style="@style/styleTextViewNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Please choose your method for verification"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <!--            <LinearLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:orientation="horizontal">-->

            <!--                <TextView-->
            <!--                    android:id="@+id/txt_mobile"-->
            <!--                    android:layout_width="@dimen/_60sdp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:background="@drawable/segment_radio_left"-->
            <!--                    android:gravity="center"-->
            <!--                    android:padding="@dimen/_5sdp"-->
            <!--                    android:text="Mobile"-->
            <!--                    android:textColor="@color/white" />-->

            <!--                <TextView-->
            <!--                    android:id="@+id/txt_email"-->
            <!--                    android:layout_width="@dimen/_60sdp"-->
            <!--                    android:layout_height="wrap_content"-->
            <!--                    android:background="@drawable/segment_radio_right"-->
            <!--                    android:gravity="center"-->
            <!--                    android:padding="@dimen/_5sdp"-->
            <!--                    android:text="Email"-->
            <!--                    android:textColor="@color/black" />-->

            <!--            </LinearLayout>-->

            <com.task.newapp.utils.SegmentedRadioGroup
                android:id="@+id/segment_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_margin="5dip"
                android:checkedButton="@+id/button_one"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@id/button_one"
                    style="@style/RadioButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="40dip"
                    android:minHeight="33dip"
                    android:text="Mobile"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/white" />

                <RadioButton
                    android:id="@+id/button_two"
                    style="@style/RadioButton"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:gravity="center"
                    android:minWidth="40dip"
                    android:minHeight="33dip"
                    android:text="Email"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/theme_color" />

            </com.task.newapp.utils.SegmentedRadioGroup>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center"
            android:orientation="vertical">

            <!--            <com.google.android.material.textfield.TextInputLayout-->
            <!--                android:id="@+id/input_layout_name"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="@dimen/_40sdp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center"-->
            <!--                android:theme="@style/EditTextThemeOverlay">-->

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:fontFamily="@font/bogleregular"
                android:hint="Enter username"
                android:inputType="text|textNoSuggestions"
                android:paddingLeft="@dimen/_45sdp"
                android:paddingRight="@dimen/_55sdp"
                android:singleLine="true"
                android:text=""
                android:textSize="@dimen/_13ssp" />

            <!--            </com.google.android.material.textfield.TextInputLayout>-->

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="@font/bogleregular"
                android:text="+91"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toRightOf="@+id/txtPhone"
                android:background="@color/black" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtSendCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:fontFamily="@font/bogleregular"
                android:text="Send Code"
                android:textColor="@color/theme_color"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_35sdp"
            android:background="@drawable/rect_rounded_gray"
            android:orientation="vertical">

            <TextView
                style="@style/styleTextViewNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_15sdp"
                android:text="Verification code"
                android:textColor="@color/darkgray"
                android:textSize="@dimen/_12ssp" />

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                app:bar_enabled="false"
                app:bar_height="2dp"
                app:bar_inactive_color="@color/gray"
                app:height="@dimen/_45sdp"
                app:length="6"
                app:otp=""
                app:otp_box_background="@color/white"
                app:otp_box_background_active="@drawable/rect_rounded_bg_white"
                app:otp_box_background_inactive="@drawable/rect_rounded_bg_white"
                app:otp_text_size="@dimen/_16ssp"
                app:width="@dimen/_40sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_15sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    style="@style/styleTextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:59"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp" />

                <TextView
                    style="@style/styleTextViewNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:text="@string/resend_code"
                    android:textColor="@color/darkgray"
                    android:textSize="@dimen/_10ssp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>