<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/shadowpost" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_90sdp"
                android:orientation="horizontal"
                android:padding="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:orientation="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_post_count"
                        style="@style/styleTextViewLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/styleTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/post"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_follower"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_follower_count"
                        style="@style/styleTextViewLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/styleTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/followers"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_following"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_following_count"
                        style="@style/styleTextViewLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/white" />

                    <TextView
                        style="@style/styleTextViewSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/following"
                        android:textColor="@color/white" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:gravity="center"
                    android:orientation="vertical" />

            </LinearLayout>
        </RelativeLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:background="@drawable/bg_bottomsheet"
            android:backgroundTint="@color/bottomsheet_bg"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <View
                android:id="@+id/viewaa"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:background="@color/gray" />


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:paddingLeft="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/txt_username"
                                    style="@style/styleTextViewLarge"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Prinsa adbiz Directory" />


                            </LinearLayout>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_acc_id"
                                style="@style/styleTextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:text="prinsa25"
                                android:textColor="@color/darkgray" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_status"
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="Hi,i am using HOW"
                                android:textSize="@dimen/_14ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_lastseen"
                                style="@style/styleTextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:layout_marginRight="@dimen/_4sdp"
                                android:drawableLeft="@drawable/ic_time"
                                android:drawablePadding="@dimen/_2sdp"
                                android:drawableTint="@color/darkgray"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"
                                android:singleLine="true"
                                android:text="Yesterday"
                                android:textColor="@color/darkgray"
                                android:textSize="@dimen/_10ssp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_follow"
                                style="@style/styleCommonButton"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/btn_follow_user"
                                android:onClick="onClickTag"
                                android:padding="@dimen/_5sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_message"
                                style="@style/styleCommonButton"
                                android:layout_width="@dimen/_80sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/btn_rect_rounded_bg"
                                android:backgroundTint="@color/white"
                                android:onClick="onClickTag"
                                android:text="@string/message"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_imagebutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:paddingRight="@dimen/_2sdp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_video"
                            style="@style/styleTextViewSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_4sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_rounded_bg_white"
                            android:drawableTop="@drawable/ic_video"
                            android:drawablePadding="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/video"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_audio"
                            style="@style/styleTextViewSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_rounded_bg_white"
                            android:drawableTop="@drawable/ic_audio"
                            android:drawablePadding="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/audio"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_mute"
                            style="@style/styleTextViewSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_2sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_rounded_bg_white"
                            android:drawableTop="@drawable/ic_mute"
                            android:drawablePadding="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/mute"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_search"
                            style="@style/styleTextViewSmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:layout_marginRight="@dimen/_4sdp"
                            android:layout_weight="1"
                            android:background="@drawable/rect_rounded_bg_white"
                            android:drawableTop="@drawable/ic_search"
                            android:drawablePadding="@dimen/_2sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="@string/search"
                            android:textAllCaps="false"
                            android:textColor="@color/black" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">


                            <TextView
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_contact_detail"
                                android:drawablePadding="@dimen/_10sdp"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/contact_detail"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />


                            <TextView
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/ic_secret_chat"
                                android:drawablePadding="@dimen/_10sdp"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/secret_chat"
                                android:textSize="@dimen/_14ssp" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />


                            <TextView
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:drawableLeft="@drawable/ic_custom_notification"
                                android:drawablePadding="@dimen/_10sdp"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/custom_notification"
                                android:textSize="@dimen/_14ssp" />


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">


                            <RelativeLayout
                                android:id="@+id/rl_p_w_l_d"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/photo_video_link_docs"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_pwld_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />

                            <RelativeLayout
                                android:id="@+id/rl_star"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/star_message"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_star_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />

                            <RelativeLayout
                                android:id="@+id/rl_posts"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="onClick">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/post"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_posts_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp"
                                    android:text="0" />
                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">


                            <RelativeLayout
                                android:id="@+id/rl_grps"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/groups_in_common"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_grpcommon_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp"
                                    android:text="0" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />


                            <RelativeLayout
                                android:id="@+id/rl_pages"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/pages_in_common"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_pagescommon_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp"
                                    android:text="0" />
                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />


                            <RelativeLayout
                                android:id="@+id/rl_frds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:onClick="onClick">

                                <TextView
                                    style="@style/styleTextViewNormal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/_5sdp"
                                    android:text="@string/friends_in_common"
                                    android:textSize="@dimen/_14ssp" />

                                <TextView
                                    android:id="@+id/txt_frdscommon_count"
                                    style="@style/styleTextViewSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:drawableRight="@drawable/ic_next"
                                    android:drawablePadding="@dimen/_10sdp"
                                    android:drawableTint="@color/black"
                                    android:padding="@dimen/_5sdp"
                                    android:text="0" />
                            </RelativeLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/_5sdp">


                            <TextView
                                android:id="@+id/txt_block"
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/block"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_14ssp" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.2dp"
                                android:background="@color/gray" />


                            <TextView
                                android:id="@+id/txt_report"
                                style="@style/styleTextViewNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:text="@string/report"
                                android:textColor="@color/red"
                                android:textSize="@dimen/_14ssp" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</RelativeLayout>
