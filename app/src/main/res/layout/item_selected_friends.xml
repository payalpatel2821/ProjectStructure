<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rl_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/profile_bg_gray_ring"
                android:padding="@dimen/_3sdp"
                android:src="@drawable/logo" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_delete_friend"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignTop="@+id/img_profile"
                android:layout_alignRight="@+id/img_profile"
                android:layout_margin="@dimen/_1sdp"
                android:background="@drawable/btn_close_round_black_bg"
                app:tint="@color/white" />
        </RelativeLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_name"
            style="@style/styleTextViewNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/_9ssp"
            tools:text="Payal" />
    </LinearLayout>
</layout>