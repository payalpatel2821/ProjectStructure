<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_profile"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_10sdp"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_user_name"
                style="@style/styleTextViewNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                android:maxLines="1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_accid"
                style="@style/styleTextViewSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@color/gray2"
                android:layout_margin="@dimen/_3sdp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/btn_follow_unfollow"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/following"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            style="@style/styleTextViewSmall"
            android:background="@drawable/bg_border"
            android:backgroundTint="@color/gray2"
            android:drawableLeft="@drawable/ic_right_resize"
            android:drawableTint="@color/black"
            android:drawablePadding="@dimen/_2sdp"
            android:layout_margin="@dimen/_5sdp"
            android:textAllCaps="false"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/iv_msg"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_20sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/ic_message_profile"
            android:visibility="gone"
            style="@style/styleImageThemeColorTint"/>

        <TextView
            android:id="@+id/btn_time"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_25sdp"
            android:text="@string/following"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            style="@style/styleTextViewSmall"
            android:layout_margin="@dimen/_5sdp"
            android:textAllCaps="false"
            android:visibility="gone"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/_70sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@color/gray" />
</LinearLayout>