<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/_5sdp"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginVertical="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--                    <de.hdodenhof.circleimageview.CircleImageView-->
                    <!--                        android:id="@+id/img_view"-->
                    <!--                        android:layout_width="@dimen/_40sdp"-->
                    <!--                        android:layout_height="@dimen/_40sdp"-->
                    <!--                        android:layout_margin="@dimen/_3sdp"-->
                    <!--                        android:elevation="@dimen/_5sdp"-->
                    <!--                        android:src="@drawable/logo" />-->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_view"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:elevation="@dimen/_3sdp"
                        android:paddingVertical="@dimen/_3sdp"
                        android:paddingLeft="@dimen/_2sdp"
                        tools:src="@drawable/logo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_username"
                                style="@style/styleTextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />

                            <TextView
                                android:id="@+id/txt_tag_username"
                                style="@style/styleTextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_2sdp"
                                android:maxLines="2"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/_11ssp" />

                        </LinearLayout>

                        <!--                        <com.task.newapp.utils.SeeMoreTextView-->
                        <!--                            android:id="@+id/name_txt"-->
                        <!--                            android:layout_width="match_parent"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginLeft="@dimen/_2sdp"-->
                        <!--                            android:fontFamily="@font/bogleregular"-->
                        <!--                            android:lineSpacingExtra="@dimen/_1sdp"-->
                        <!--                            android:textColor="@color/black"-->
                        <!--                            android:text=""-->
                        <!--                            android:textSize="@dimen/_12ssp" />-->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtTime"
                                style="@style/styleTextViewSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_3sdp"
                                android:singleLine="true"
                                android:text="10 min"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/_8ssp" />

                            <TextView
                                android:id="@+id/txtLocation"
                                style="@style/styleTextViewSmall"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:drawableLeft="@drawable/ic_dot"
                                android:drawablePadding="@dimen/_5sdp"
                                android:gravity="left|center"
                                android:singleLine="true"
                                android:text="Location"
                                android:textColor="@color/gray4"
                                android:textSize="@dimen/_8ssp"
                                android:visibility="visible" />

                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/more_iv"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="bottom"
                        android:padding="@dimen/_5sdp"
                        android:rotation="90"
                        android:src="@drawable/more"
                        android:visibility="visible"
                        app:tint="@color/gray" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <com.task.newapp.utils.socialtextview.SocialTextView
                        android:id="@+id/title_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/_5sdp"
                        android:layout_marginLeft="4pt"
                        android:layout_weight="1"
                        android:fontFamily="@font/bogleregular"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp"
                        android:visibility="gone" />

                    <!--                <androidx.appcompat.widget.AppCompatTextView-->
                    <!--                    android:id="@+id/txtTime"-->
                    <!--                    android:layout_width="wrap_content"-->
                    <!--                    android:layout_height="wrap_content"-->
                    <!--                    android:layout_marginRight="2pt"-->
                    <!--                    android:fontFamily="@font/bogleregular"-->
                    <!--                    android:singleLine="true"-->
                    <!--                    android:text="10 min"-->
                    <!--                    android:textColor="@color/black"-->
                    <!--                    android:textSize="@dimen/_10ssp" />-->

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/mainlay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rlMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--android:background="@drawable/rect_bg_post_shadow"-->

                    <io.github.florent37.shapeofview.ShapeOfView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        app:shape_clip_drawable="@drawable/rect_bg_post">

                        <ImageView
                            android:id="@+id/post_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_170sdp"
                            android:layout_gravity="center"
                            android:scaleType="centerCrop" />

                        <FrameLayout
                            android:id="@+id/fl_media_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_multi"
                                android:layout_width="10pt"
                                android:layout_height="10pt"
                                android:layout_margin="5pt"
                                android:elevation="10pt"
                                android:src="@drawable/ic_multiple"
                                android:visibility="gone" />

                            <com.allattentionhere.autoplayvideos.AAH_CustomRecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center" />

                        </FrameLayout>

                        <!--                            <com.task.newapp.utils.dotindicator.DotsIndicator-->
                        <!--                                android:id="@+id/dots_indicator"-->
                        <!--                                android:layout_width="wrap_content"-->
                        <!--                                android:layout_height="wrap_content"-->
                        <!--                                android:layout_alignParentBottom="true"-->
                        <!--                                android:layout_centerHorizontal="true"-->
                        <!--                                android:layout_marginStart="@dimen/_10sdp"-->
                        <!--                                android:layout_marginTop="@dimen/_10sdp"-->
                        <!--                                android:layout_marginEnd="@dimen/_10sdp"-->
                        <!--                                android:layout_marginBottom="@dimen/_10sdp"-->
                        <!--                                android:visibility="gone"-->
                        <!--                                app:dotsColor="#D2FFFFFF"-->
                        <!--                                app:dotsCornerRadius="8dp"-->
                        <!--                                app:dotsSize="@dimen/_5sdp"-->
                        <!--                                app:dotsSpacing="@dimen/_3sdp"-->
                        <!--                                app:dotsWidthFactor="2.5"-->
                        <!--                                app:progressMode="false"-->
                        <!--                                app:selectedDotColor="@color/theme_color" />-->

                        <RelativeLayout
                            android:id="@+id/rlThought"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/txtThought"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/_5sdp"
                                android:background="@null"
                                android:editable="false"
                                android:ellipsize="end"
                                android:text=""
                                android:textSize="@dimen/_14ssp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txtMore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_gravity="right|bottom"
                                android:paddingTop="@dimen/_15sdp"
                                android:text="See more.."
                                android:textSize="@dimen/_10ssp" />

                        </RelativeLayout>

                        <!--                        <androidx.appcompat.widget.AppCompatTextView-->
                        <!--                            android:id="@+id/txtMore"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_gravity="bottom|right"-->
                        <!--                            android:layout_marginTop="@dimen/_10sdp"-->
                        <!--                            android:padding="@dimen/_8sdp"-->
                        <!--                            android:text="See more.."-->
                        <!--                            android:textSize="@dimen/_10ssp" />-->

                    </io.github.florent37.shapeofview.ShapeOfView>

                    <ImageView
                        android:id="@+id/img_playpause"
                        android:layout_width="20pt"
                        android:layout_height="20pt"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="5pt"
                        android:elevation="10pt"
                        android:src="@drawable/play"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_default"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:layout_margin="5pt"
                        android:elevation="10pt"
                        android:src="@drawable/gallery_post"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rlMain"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_not_like"
                            app:tint="@color/gray4" />

                        <TextView
                            android:id="@+id/txtLikeCount"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:fontFamily="@font/bogleregular"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_10ssp" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llComment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_comment"
                                app:tint="@color/gray4" />

                            <TextView
                                android:id="@+id/txtCommentCount"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:fontFamily="@font/bogleregular"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="0"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_10ssp" />

                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginHorizontal="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgShare"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_send"
                            app:tint="@color/gray4" />

                        <ImageView
                            android:id="@+id/imgSave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15sdp"
                            android:src="@drawable/ic_save"
                            app:tint="@color/gray4" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </RelativeLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rl_second"
                    android:layout_marginHorizontal="@dimen/_8sdp"
                    android:padding="@dimen/_2sdp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layout_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtComment"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/add_comment_bg">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edt_comment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_28sdp"
                        android:layout_toLeftOf="@id/txtPost"
                        android:background="@color/transparent"
                        android:fontFamily="@font/bogleregular"
                        android:hint="Add a Comment.."
                        android:inputType="textCapSentences|textMultiLine"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:textSize="@dimen/_10ssp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txtPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Post"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/imgShadow"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_below="@+id/rlMain"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shadowpostitem"
                    android:visibility="gone"
                    app:tint="@color/black" />

            </RelativeLayout>

        </LinearLayout>

        <!--        <com.hoanganhtuan95ptit.autoplayvideorecyclerview.AutoPlayVideoRecyclerView-->
        <!--            android:id="@+id/recyclerView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="@dimen/_170sdp" />-->

    </LinearLayout>
</layout>